<h2>
  Title:
  <%= @article.title %>
</h2>
<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>
<p>
  <%= @article.published_at.to_s(:post) %>
</p>
<h2>Comments</h2>
<%= render @article.comments %>

<h2> Add a comment: </h2>
<%= render "comments/form" %>

<%= link_to 'Back', articles_path, class: 'btn btn-default'   %>
<%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-default'  %>